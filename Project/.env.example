# =============================================================================
# LLM-Agents-RAG Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values.
# Required variables must be set for the application to run.
# =============================================================================

# -----------------------------------------------------------------------------
# REQUIRED - API Keys
# -----------------------------------------------------------------------------
GOOGLE_API_KEY=your_google_api_key_here

# -----------------------------------------------------------------------------
# OPTIONAL - Model Configuration
# -----------------------------------------------------------------------------
LLM_MODEL=gemini-pro
EMBEDDING_MODEL=models/embedding-001

# -----------------------------------------------------------------------------
# OPTIONAL - Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# OPTIONAL - RAG Configuration
# -----------------------------------------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVER_K=3
BM25_WEIGHT=0.5
VECTOR_WEIGHT=0.5

# -----------------------------------------------------------------------------
# OPTIONAL - Paths
# -----------------------------------------------------------------------------
VECTOR_STORE_PATH=./chroma_db
PDF_DATA_PATH=./data/pdfs

# -----------------------------------------------------------------------------
# OPTIONAL - Memory Configuration
# -----------------------------------------------------------------------------
MEMORY_BUFFER_SIZE=10
MEMORY_SUMMARY_THRESHOLD=20
MEMORY_SESSION_TTL=3600

# -----------------------------------------------------------------------------
# OPTIONAL - Caching (requires Redis service)
# -----------------------------------------------------------------------------
CACHE_ENABLED=true
REDIS_URL=redis://redis:6379
CACHE_TTL_SECONDS=3600

# -----------------------------------------------------------------------------
# OPTIONAL - Cost Control
# -----------------------------------------------------------------------------
DAILY_BUDGET_USD=10.0
COST_ALERT_THRESHOLD=0.8

# -----------------------------------------------------------------------------
# OPTIONAL - Fallback Models
# -----------------------------------------------------------------------------
FALLBACK_MODELS=gemini-pro,gemini-flash

# -----------------------------------------------------------------------------
# OPTIONAL - Drift Detection
# -----------------------------------------------------------------------------
DRIFT_ALERT_THRESHOLD=0.3
STALENESS_THRESHOLD_DAYS=30

# -----------------------------------------------------------------------------
# OPTIONAL - Tracing (requires Jaeger service)
# -----------------------------------------------------------------------------
TRACING_ENABLED=false
TRACING_SERVICE_NAME=llm-agents
